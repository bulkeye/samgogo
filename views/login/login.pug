//- login.pug
extends ../base/base_layout.pug
block append content
        div.formContainer
            form#searchForm(action="/loginForm" )
                input.inputText#inputEmail(type="text" placeholder="email..." required='true')
                input.inputText#inputPW(type="password" placeholder="password..." required='true')
                input#submitBtn(type="submit" value="submit")
            .typedText  
            .ajaxResult blank
                if errors 
                    ul
                        for error in errors
                            li!= error.msg